#!/usr/bin/env python
import os
import sys
from niquery.app import main

# for running on docker
host = os.environ.get('DB_PORT_5672_TCP_ADDR', None)
port = os.environ.get('DB_PORT_5672_TCP_PORT', None)


if host and port:
    broker = "amqp://{0}:{1}//".format(host, port)
    sys.exit(main(broker=broker))
else:
    sys.exit(main())